.pickers
    display: flex
    flex-direction: column
    

.dateTimePicker
    width: 75%
    height: 75%
    padding: 0 10px
    border: 1px solid #ccc
    border-radius: 5px
    background-color: #fff
    box-sizing: border-box
    cursor: pointer
    align-self: center

.text
    font-size: 1.2em
    color: #555
    padding: 5px
    margin: 0
    border-bottom: 1px solid #ccc
    text-align: center
    font-weight: bold
    font-family: sans-serif
    justify-self: center
    align-self: center
    font-variant-caps: small-caps
    
.textfields
    display: flex
    flex-direction: column
    align-items: center
    justify-content: space-around
    margin: 10px
    
.createButton
    margin: 10px 30%
    padding: 5px
    font-size: 1.2em
    font-family: sans-serif
    border-radius: 5px
    border: 1px outset #ccc
    background-color: #fff
    cursor: pointer
    
.createButton:hover
    background-color: #ccc
    border: 1px outset #fff

    